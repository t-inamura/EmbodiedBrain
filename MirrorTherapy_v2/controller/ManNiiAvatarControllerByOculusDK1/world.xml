<?xml version="1.0" encoding="utf8"?>
<world name="OculusRiftDK1World">

	<!--Gravity-->
	<gravity x="0.0" y="-980.7" z="0.0"/>

	<!--Agent "Man-nii"-->
	<instanciate class="Man-nii.xml">

		<!--Agent name-->
		<set-attr-value name="name" value="oculus_man"/>

		<!--C++-->
		<set-attr-value name="language" value="c++"/>

		<!--Object file "kinectController.so"-->
		<set-attr-value name="implementation" value="./ManNiiAvatarControllerByOculusDK1.so"/>

		<!--Kineticsset as false-->
		<set-attr-value name="dynamics" value="false"/>

		<!--Agent position(x,y,z)-->
		<set-attr-value name="x" value="0.0"/>
		<set-attr-value name="y" value="60.0"/>
		<set-attr-value name="z" value="0.0"/>

		<camera id="1" link="HEAD_LINK" direction="0 0 1" position="0.0 0.0 5.0"/>
		
	</instanciate>
</world>
